<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fragment_user_details_layout_margin"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_repo_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_repo_caption"
        tools:text="Репозиторий:" />

    <TextView
        android:id="@+id/tv_repo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_fork_count_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_fork_count_caption"
        tools:text="Количество форков:" />

    <TextView
        android:id="@+id/tv_repo_fork_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1" />
</LinearLayout>